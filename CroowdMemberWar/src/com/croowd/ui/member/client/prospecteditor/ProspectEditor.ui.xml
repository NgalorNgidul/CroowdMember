<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:s="urn:import:org.simbiosis.ui.gwt.client.editor"
	xmlns:e="urn:import:com.croowd.ui.member.client.component"
	>
	<g:VerticalPanel styleName="fullbox" height="100%"
		width="100%">
		<g:HTMLPanel styleName="header1">
			<div>DATA PROSPEK</div>
		</g:HTMLPanel>
		<g:HTMLPanel styleName="headerspacer">
			<div></div>
		</g:HTMLPanel>
		<g:HorizontalPanel styleName="widgetbox">
			<g:HTMLPanel styleName="fullbox">
				<table class="fullbox">
					<tr>
						<td class="halfbox">
							<div class="compositebox">
								<div class="fieldtitle">Nama proyek</div>
								<g:TextBox styleName="fieldtextbox" ui:field="title" />
							</div>
							<div class="compositebox">
								<div class="fieldtitle">Lokasi</div>
								<g:TextBox styleName="fieldtextbox" ui:field="location" />
							</div>
							<div class="compositebox">
								<div class="fieldtitle">Kebutuhan</div>
								<s:DoubleTextBox styleName="fieldtextbox" ui:field="principal" />
							</div>
							<div class="compositebox">
								<div class="fieldtitle">Tenor</div>
								<e:IntegerTypeComboBox styleName="fieldcombobox" ui:field="tenor" />
							</div>
							<div class="compositebox">
								<div class="fieldtitle">Kategori</div>
 								<s:StringListComboBox styleName="fieldcombobox" ui:field="category" />
							</div>
							<div class="compositebox">
								<div class="fieldtitle">Keterangan singkat</div>
								<g:TextArea styleName="fieldareabox" ui:field="shortDescription" characterWidth="80" visibleLines="5"/>
							</div>
							<div class="compositebox">
								<div class="fieldtitle">Keterangan</div>
								<g:TextArea styleName="fieldareabox" ui:field="description"  characterWidth="80" visibleLines="10"/>
							</div>
						</td>
					</tr>
				</table>
			</g:HTMLPanel>
		</g:HorizontalPanel>
		<g:HTMLPanel styleName="widgetboxspacer">
			<div></div>
		</g:HTMLPanel>
		<g:HTMLPanel styleName="header1">
			<div>DATA PROMOSI</div>
		</g:HTMLPanel>
		<g:HTMLPanel styleName="headerspacer">
			<div></div>
		</g:HTMLPanel>
		<g:HorizontalPanel styleName="widgetbox">
			<g:HTMLPanel styleName="fullbox">
				<table class="fullbox">
					<tr>
						<td class="halfbox">
							<div class="compositebox">
								<div class="fieldtitle">Lama promosi</div>
								<s:IntegerTextBox styleName="fieldtextbox" ui:field="campaignPeriod" width="90px"/> hari
							</div>
							<div class="compositebox">
								<div class="fieldtitle">Foto</div>
								<g:HTMLPanel ui:field="smallPicture"/>
								<g:Button styleName="fieldbutton" ui:field="btnUploadFoto">Upload foto</g:Button>
							</div>
						</td>
					</tr>
				</table>
			</g:HTMLPanel>
		</g:HorizontalPanel>
		<g:HTMLPanel styleName="widgetboxspacer">
			<div></div>
		</g:HTMLPanel>
		<g:HorizontalPanel>
			<g:Button styleName="fieldbigbutton" ui:field="btnSave" text="Simpan" />
			<g:HTMLPanel styleName="widgetboxspacer">
				<div class="fieldspacer"></div>
			</g:HTMLPanel>
       		<g:Button styleName="fieldbigbutton" ui:field="btnBack" text="Kembali" />
		</g:HorizontalPanel>
	</g:VerticalPanel></ui:UiBinder> 